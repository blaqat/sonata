{
       "[javascript]": {
              "editor.defaultFormatter": "vscode.typescript-language-features",
              "editor.formatOnSave": true,
       },
       "editor.codeActionsOnSave": {
              "source.organizeImports.biome": "explicit"
       },
       "workbench.colorTheme": "Default Dark Modern",
       "editor.fontFamily": "Liga mononoki, Monolisa Nerd Font Mono, Jetbrains Mono, Comic Code, Comic Mono",
       "editor.fontSize": 13,
       "shifty.shiftInterval.shiftFontFamilyIntervalMin": 0,
       "shifty.shiftInterval.shiftColorThemeIntervalMin": 0,
       // "editor.fontFamily": "'Monaspace Xenon', monospace",
       "editor.tokenColorCustomizations": {
              "textMateRules": [
                     {
                            "scope": [
                                   "keyword.other",
                                   "entity.name.type",
                                   "keyword.function",
                                   "storage.type",
                                   "support.type",
                                   "support.constant",
                                   "constant.language",
                            ],
                            "settings": {
                                   "fontStyle": "bold"
                            }
                     },
                     {
                            "scope": [
                                   "meta.function",
                                   "support.type.property-name",
                                   "keyword.operator.logical.js",
                                   "keyword.control.conditional.js",
                            ],
                            "settings": {
                                   "fontStyle": ""
                            }
                     }
              ]
       }
}